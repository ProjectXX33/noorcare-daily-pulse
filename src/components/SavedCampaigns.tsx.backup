import { Separator } from '@/components/ui/separator';
import { Calendar, Target, TrendingUp, Users, DollarSign, BarChart3, Download, Play, Pause, Trash2, Eye, X, Globe, Clock, Zap, Award, Star, ExternalLink } from 'lucide-react';
